<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.activity.GroupChatActivity">

    <include layout="@layout/group_chat_title_bar"/>

    <ListView
        android:id="@+id/lv_group_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:scrollbars="none">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/add_grey">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/chat_et_shape"
            android:layout_margin="8dp">

            <EditText
                android:id="@+id/et_group_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="2dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/tv_group_msg"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_login"
            android:textColor="@color/white"
            android:text="发送"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginRight="8dp"
            android:clickable="true"/>

    </LinearLayout>



</LinearLayout>