<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/contact_bg_color">


    <include layout="@layout/contact_titlebar"/>


    <include layout="@layout/cont_top_item"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?android:listDivider"
        />




    <android.support.design.widget.TabLayout
        android:id="@+id/tl_con_list"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:tabGravity="fill"
        app:tabTextColor="@color/con_text_color"
        app:tabSelectedTextColor="@color/blue"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/blue"
        app:tabTextAppearance="@style/tab_text_style"
        android:background="@color/white"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?android:listDivider"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_cont_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>







</LinearLayout>